<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"android:layout_gravity="center_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/cabrita"
        app:layout_constraintBottom_toBottomOf="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

    <EditText
        android:id="@+id/usuario"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_baseline_account"
        android:background="@drawable/corbotao"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:padding="10dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="350dp" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_baseline_lock"
        android:background="@drawable/corbotao"
        android:inputType="textPassword"
        android:maxLength="50"
        android:padding="10dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:id="@+id/cadastre"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="128dp"
        android:text="Cadastre-se"
        android:background="@drawable/botaoredondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="128dp"
        android:text="Login"
        android:background="@drawable/botaoredondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>